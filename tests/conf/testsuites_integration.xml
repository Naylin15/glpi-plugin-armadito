<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
  bootstrap="bootstrap.php"
  processIsolation="false"
  backupGlobals="false"
  strict="false">
  <logging>
    <log type="junit" target="../build/logs/junit_integration.xml" logIncompleteSkipped="true" />
  </logging>
  <testsuites>
    <testsuite name="Integration">
      <file>2_Integration/AgentTest.php</file>
      <file>2_Integration/AlertTest.php</file>
      <file>2_Integration/JobTest.php</file>
      <file>2_Integration/ScanTest.php</file>
      <file>2_Integration/StateTest.php</file>
    </testsuite>
  </testsuites>
</phpunit>


