<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
  bootstrap="bootstrap.php"
  processIsolation="false"
  backupGlobals="false"
  strict="false">
  <logging>
    <log type="junit" target="../build/logs/junit_integration.xml" logIncompleteSkipped="true" />
  </logging>
  <testsuites>
    <testsuite name="Integration">
        <directory suffix="Test.php">../2_Integration/Step1</directory>
        <directory suffix="Test.php">../2_Integration/Step2</directory>
        <directory suffix="Test.php">../2_Integration/Step3</directory>
        <directory suffix="Test.php">../2_Integration/Step4</directory>
        <directory suffix="Test.php">../2_Integration/Step5</directory>
    </testsuite>
  </testsuites>
</phpunit>


