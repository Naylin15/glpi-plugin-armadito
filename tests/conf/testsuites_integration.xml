<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
  bootstrap="bootstrap.php"
  processIsolation="false"
  backupGlobals="false"
  stopOnFailure="true"
  strict="false" >
  <logging>
    <log type="junit" target="../build/logs/junit_integration.xml" logIncompleteSkipped="true" />
  </logging>
  <testsuites>
    <testsuite name="Integration">
        <directory suffix="Test.php">../2_Integration/Step0-Install</directory>
        <directory suffix="Test.php">../2_Integration/Step1-Init</directory>
        <directory suffix="Test.php">../2_Integration/Step2-NewJobs</directory>
        <directory suffix="Test.php">../2_Integration/Step3-GetJobs</directory>
        <directory suffix="Test.php">../2_Integration/Step4-RunJobs</directory>
        <directory suffix="Test.php">../2_Integration/Step5-Results</directory>
        <directory suffix="Test.php">../2_Integration/Step6-AVStatus</directory>
        <directory suffix="Test.php">../2_Integration/Step7-Boards</directory>
        <directory suffix="Test.php">../2_Integration/Step8-Forms</directory>
        <directory suffix="Test.php">../2_Integration/Step9-Menu</directory>
    </testsuite>
  </testsuites>
</phpunit>


