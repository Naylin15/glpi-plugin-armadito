<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
  bootstrap="bootstrap.php"
  processIsolation="false"
  backupGlobals="false"
  stopOnFailure="true"
  strict="false">
  <logging>
    <log type="junit" target="../build/logs/junit_install.xml" logIncompleteSkipped="true" />
  </logging>
  <testsuites>
    <testsuite name="Install">
      <file>0_Install/GLPIInstallTest.php</file>
      <file>0_Install/ArmaditoInstallTest.php</file>
      <file>0_Install/SaveInstallTest.php</file>
    </testsuite>
  </testsuites>
</phpunit>


